<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.artifactId}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param  name="configure.url">/secure/RPXConfigAction.jspa</param>
    </plugin-info>
    
    <servlet-filter name="RPX Endpoint Servlet"  key="rpx_endpoint" class="com.janrain.jira.plugins.RPXEndpoint"  location="before-dispatch" weight="200">
        <description>RPX endpoint.</description>
        <url-pattern>/rpx_end</url-pattern>
	    <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </servlet-filter>
    
    <rest key="rest-service-resources" path="/com-janrain-rpx-rest" version="1.0">
	    <description>Provides the REST resource for the rpx plugin.</description>
	</rest>
    
    <webwork1 key="rpxconfiguration" name="RPX Configuration" class="java.lang.Object">
    	<actions>
    	    <action name="com.janrain.jira.plugins.webwork.ActionRPXConfig" alias="RPXConfigAction">
	          <view name="success">/templates/com/janrain/jira/plugins/rpx/config/success.vm</view>
	          <!-- <view name="error">/templates/com/consultingtoolsmiths/jira/samples/webwork/error.vm</view> -->
	          <view name="input">/templates/com/janrain/jira/plugins/rpx/config/input.vm</view>
	          <view name="reconfigure">/templates/com/janrain/jira/plugins/rpx/config/reconfigure.vm</view>
        	</action>
        </actions>
    </webwork1>
    
    <gadget key="rpx-gadget" name="RPX Login Gadget" location="rpx-gadget.xml">
    <description>
        Allows OpenID authentication via RPX
    </description>
	</gadget>
    
</atlassian-plugin>